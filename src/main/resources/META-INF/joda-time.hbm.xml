<!-- Joda Time to Hibernate common mappings -->
<!-- -->
<hibernate-mapping>
   <typedef name="org.joda.time.DateTime" class="org.joda.time.contrib.hibernate.PersistentDateTime" />
   <typedef name="org.joda.time.Duration" class="org.joda.time.contrib.hibernate.PersistentInstantAsBigInt" />
   <typedef name="org.joda.time.Instant" class="org.joda.time.contrib.hibernate.PersistentInstant" />
   <typedef name="org.joda.time.Interval" class="org.joda.time.contrib.hibernate.PersistentInterval" />
   <typedef name="org.joda.time.LocalDate" class="org.joda.time.contrib.hibernate.PersistentLocalDate" />
   <typedef name="org.joda.time.LocalDateTime" class="org.joda.time.contrib.hibernate.PersistentLocalDateTime" />
   <typedef name="org.joda.time.LocalTime" class="org.joda.time.contrib.hibernate.PersistentLocalTimeAsTime" />
   <typedef name="org.joda.time.TimeOfDay" class="org.joda.time.contrib.hibernate.PersistentTimeOfDay" />
   <typedef name="org.joda.time.YearMonthDay" class="org.joda.time.contrib.hibernate.PersistentYearMonthDay" />
</hibernate-mapping>